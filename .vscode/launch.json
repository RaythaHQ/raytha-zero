{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Launch RaythaZero.Web",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "${workspaceFolder}\\src\\RaythaZero.Web\\bin\\Debug\\net8.0\\RaythaZero.Web.dll",
        "args": [],
        "cwd": "${workspaceFolder}\\src\\RaythaZero.Web",
        "stopAtEntry": false,
        "serverReadyAction": {
          "action": "openExternally",
          "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
        },
        "env": {
          "DOTNET_ENVIRONMENT": "Development"
        },
        "sourceFileMap": {
          "/src": "${workspaceFolder}\\src"
        }
      },

      // New DevContainer Configuration
